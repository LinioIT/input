    "keywords": ["linio", "input", "form"],
    "type": "library",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.2",
        "ramsey/uuid": "^4.0",
        "doctrine/inflector": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0",
        "friendsofphp/php-cs-fixer": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Linio\\Component\\Input\\": "src"
        }
